    <h1>Gallery</h1>
    <div class="parallel-container">
        <img src="/Image/<%= image.imageUrl %>" alt="Uploaded Image" class="image">
        <div class="content">
            <h3>Title: <%= image.title %></h3>
            <h3>Category: <%= image.category %></h3>
            <% if(image.comment) { %>
                <p>Comment: <%= image.comment %></p>
            <% } %>
        </div>
    </div>

   <form>
    <button onclick="getRandomImage()">Get Another Random Image</button>
</form>

